<% layout('layouts/boilerplate') %> 
<div id="cluster-map" style="width: 100%; height: 500px"></div>
<h1>All Parks</h1>
<div>
    <a href="/parks/new">Add Park</a>
</div>
    <% for (let park of parks) { %>
        <div class="card mb-3" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <% if(park.images.length) { %>
                    <img crossorigin="anonymous" class="img-fluid" alt="" src="<%=park.images[0].url%>"> 
                    <% } else { %>
                    <img src="" alt=""> 
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= park.title %></h5>
                        <p class="card-text"><%= park.description %></p>
                        <p class="card-text">
                        <small class="text-muted"><%= park.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/parks/<%= park._id %>">View <%= park.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
<script>
    const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
    const parks = { features: <%- JSON.stringify(parks) %>}
</script>
<script src="/javascripts/clusterMap.js"></script>
