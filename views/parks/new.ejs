<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New Park</h1>
    <div class="col-md-6 offset-md-3">
        <div class="card shadow">
            <div class="card-body">
            <form action="/parks" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="park[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="park[location]" required>
                </div>
                <div class"mb-3">
                    <label class="form-label" for="price">Park Price</label>
                    <div class="input-group mb-3">
                      <span class="input-group-text" id"price-label">$</span>
                      <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="park[price]" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="park[description]" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="image">Upload Image(s)</label>
                    <div class="input-group mb-3">
                        <input type="file" multiple class="form-control" id="image" name="image">
                    </div>
                </div>
                <div class="mb-3"> 
                <button class="btn btn-success">Add Park</button>
                </div>
            </form>
            <a href="/parks">All Parks</a>
            </div>
        </div>
    </div>
</div>

